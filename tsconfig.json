{
  "compilerOptions": {
    // "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target": "es6",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/with-apollo.js",
    "lib/use-local-storage.js",
    "top-layer-layout"
  ],
  "exclude": [
    "node_modules"
  ]
}